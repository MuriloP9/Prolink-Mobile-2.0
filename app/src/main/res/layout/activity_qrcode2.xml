<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Adicionar Contato"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:id="@+id/container_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_titulo"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_escanear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escanear QR"
            android:background="@drawable/button_selected"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btn_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserir Código"/>
    </LinearLayout>

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/container_options"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/surface_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Posicione o QR code na área de captura"
        android:textSize="18sp"/>

</RelativeLayout>