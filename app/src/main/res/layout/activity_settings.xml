<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_perfil_gradiente"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/retangulo_arrendondado"
            android:elevation="8dp"
            android:layout_margin="24dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configurações"
                android:textColor="#2E3440"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTA"
                android:textColor="#4C566A"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Editar Perfil"
                android:textSize="16sp"
                android:background="@drawable/bg_button_settings"
                android:textColor="#2E3440"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="16dp"
                android:drawableTint="#3B4252"/>

            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Alterar Senha"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_button_settings"
                android:textColor="#2E3440"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="16dp"
                android:drawableTint="#3B4252"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SOBRE"
                android:textColor="#4C566A"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Sobre o Aplicativo"
                android:textSize="16sp"
                android:background="@drawable/bg_button_settings"
                android:textColor="#2E3440"
                android:drawableStart="@drawable/ic_info"
                android:drawablePadding="16dp"
                android:drawableTint="#3B4252"/>

            <Button
                android:id="@+id/btn_privacy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Política de Privacidade"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_button_settings"
                android:textColor="#2E3440"
                android:drawableStart="@drawable/ic_privacy"
                android:drawablePadding="16dp"
                android:drawableTint="#3B4252"/>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Sair"
                android:textColor="#BF616A"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_button_logout"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="16dp"
                android:drawableTint="#BF616A"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>