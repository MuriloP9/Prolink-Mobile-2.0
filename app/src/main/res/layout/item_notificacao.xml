<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <View
        android:id="@+id/indicator_unread"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/circle_indicator"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_remetente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/indicator_unread"
        android:layout_toStartOf="@id/txt_data"/>

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/txt_mensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_remetente"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/indicator_unread"
        android:layout_toStartOf="@id/badge_unread_count"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/badge_unread_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txt_data"
        android:background="@drawable/badge_circle"
        android:gravity="center"
        android:minWidth="24dp"
        android:minHeight="24dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="gone"/>

</RelativeLayout>